<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lavish.toprestro">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TopRestro">
        <activity android:name="com.lavish.toprestro.old.ui.admin.manageUsers.ManageUsersActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.lavish.toprestro.old.ui.admin.AdminActivity"/>
        <activity android:name="com.lavish.toprestro.old.ui.admin.manageRestro.ManageRestroActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.lavish.toprestro.old.ui.admin.AdminActivity"/>
        <activity android:name="com.lavish.toprestro.old.ui.admin.AdminActivity"
            android:label="TopRestro Admin"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.lavish.toprestro.old.ui.owner.OwnerActivity"
            android:label="TopRestro Owner"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.lavish.toprestro.old.ui.common.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.lavish.toprestro.old.ui.common.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.lavish.toprestro.old.ui.user.MainActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>