<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/restroListFragment">

    <fragment
        android:id="@+id/restroListFragment"
        android:name="com.lavish.toprestro.ui.user.RestroListFragment"
        android:label="@string/app_name" >
        <action
            android:id="@+id/action_restroListFragment_to_userRestroFragment"
            app:destination="@id/userRestroFragment" />
    </fragment>
    <fragment
        android:id="@+id/userRestroFragment"
        android:name="com.lavish.toprestro.ui.user.UserRestroFragment"
        android:label="Restaurant">
        <argument
            android:name="restaurant"
            app:argType="string" />
        <argument
            android:name="isEditMode"
            android:defaultValue="false"
            app:argType="boolean" />
    </fragment>
</navigation>